<Application x:Class="DesktopAssmenit.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DesktopAssmenit"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="buttonn" TargetType="Button">
            <Setter Property="Background" Value="DarkBlue"></Setter>
            <Setter Property="FontFamily" Value="20"></Setter>
            <Setter Property ="Margin" Value="20" ></Setter>
            <Setter Property="BorderBrush" Value="Pink"></Setter>
            <Setter Property ="FontSize" Value="30"></Setter>

        </Style>
        <Style x:Key="lab" TargetType="Label">
            <Setter Property="Background" Value="DarkBlue"></Setter>
            <Setter Property="FontFamily" Value="20"></Setter>
            <Setter Property ="Margin" Value="20" ></Setter>
            <Setter Property="BorderBrush" Value="Pink"></Setter>
            <Setter Property ="FontSize" Value="30"></Setter>

        </Style>
        <Style x:Key="Border" TargetType="Border">
            <Setter Property="Background" Value="DarkBlue"></Setter>
            <Setter Property="Width" Value="20"></Setter>
            <Setter Property ="Margin" Value="20" ></Setter>
            <Setter Property="BorderBrush" Value="Pink"></Setter>
            


        </Style>
    </Application.Resources>
</Application>
