<Page x:Class="DesktopAssmenit.Search"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopAssmenit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Search">

    <Grid>
        <Grid Background="White" Grid.RowSpan="2">
            <TextBox x:Name="City" HorizontalAlignment="Left" Margin="190,55,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="225" Height="38" FontSize="25"/>
            <Button x:Name="Search" Style="{StaticResource buttonn}" Content="Search" HorizontalAlignment="Left" Margin="505,55,0,0" VerticalAlignment="Top" FontSize="30" Width="165" Height="38" Click="Button_Click"/>
            <DataGrid x:Name="mm" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,225,0,0"/>
        </Grid>
        <Label Content="City" HorizontalAlignment="Left" Margin="115,50,0,0" VerticalAlignment="Top" FontSize="30"/>

    </Grid>
</Page>
